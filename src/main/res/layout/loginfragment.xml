<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:layout_weight="5"
            android:background="#3b5998"
            android:text="@string/login_via_facebook"
            android:textColor="#ffffffff" />

        <CheckBox
            android:id="@+id/fbCheckbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
    <Button
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="@string/login_via_twitter"
        android:id="@+id/twitter"
        android:layout_gravity="center_horizontal"
        android:background="#55ACEE"
        android:layout_margin="8dp"
        android:textColor="#ffffffff" />

        <CheckBox
            android:id="@+id/twCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_via_instagram"
        android:id="@+id/instagram"
        android:layout_gravity="center_horizontal"
        android:background="#CD486B"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"/>
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/igCheckbox"/>
    </LinearLayout>
</LinearLayout>