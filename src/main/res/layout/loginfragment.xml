<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_via_facebook"
        android:id="@+id/facebook"
        android:layout_gravity="center_horizontal"
        android:background="#3b5998"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"
        android:layout_weight="5"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/fbCheckbox"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_via_twitter"
        android:id="@+id/twitter"
        android:layout_gravity="center_horizontal"
        android:background="#55ACEE"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"
        android:layout_weight="5"/>
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/twCheckbox"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_via_instagram"
        android:id="@+id/instagram"
        android:layout_gravity="center_horizontal"
        android:background="#CD486B"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"/>
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/igCheckbox"/>
    </LinearLayout>
</LinearLayout>